<%- include("partials/header") -%>

    <h1>Compose</h1>

    <form action="/compose" method="post">

        <div class="mb-3">
            <label for="inputTitle" class="form-label">Title</label>
            <input id="inputTitle" type="text" name="postTitle" class="form-control">
        </div>

        <div class="mb-3">
            <label for="inputPost" class="form-label">Post</label>
            <textarea id="inputPost" name="postBody" class="form-control" cols="30" rows="5"></textarea>
        </div>

        <button type="submit" name="button" class="btn btn-primary">Publish</button>

    </form>


    <%- include("partials/footer") -%>